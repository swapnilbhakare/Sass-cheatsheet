
/* sass variable*/
  $text-color: red;

  .header{
    text-align: center;
  }
  .blog-post, h2 {
/* call sass variable */
    color: $text-color;
  }


/*Nest css with saas*/
  .blog-post { 
    h1 {
     text-align: center;
     color: blue;
    }
    p {
        font-size: 20px;
    } 
  }

/*reysabke css with mixins*/
  @mixin border-radius($radius){
    -webkit-border-radius:$radius;
    -moz-border-radius:$radius;
    -ms-border-radius:$radius;
    border-radius:$radius;
  }

  #awesome {
    width: 150px;
    height: 150px;
    background-color: green;
    @include border-radius(15px);
  }

/* if else in saas */
@mixin border-stroke($val) {
    @if $val == light {
      border: 1px solid black;
    }
    @else if $val == medium {
      border: 3px solid black;
    }
    @else if $val == heavy {
      border: 6px solid black;
    }
    @else {
      border: none;
    }
  }
  
  #box {
    width: 150px;
    height: 150px;
    background-color: red;
    @include border-stroke(medium);
  }  


/*for loop in saas*/
 @for $j from 1 through 5 {
    .text-#{$j} { font-size: 15px * $j; }
  }


/*each to map over items*/
  @each $color in blue, black, red {
    .#{$color}-bg {background-color: $color;}
  }
  
  div {
    height: 200px;
    width: 200px;
  }

/*while loop in sass*/

$x: 1;
@while $x < 11 {
  .text-#{$x} { 
    font-size: 15px * $x;
  }
  $x: $x + 1;
}


/*slip styles into small chuncks with partials*/

Use @import to import _variables.scss like:

@import 'variables' 


/*Extend One Set of CSS Styles to Another ElementPassed*/
.info {
    width: 200px;
    border: 1px solid black;
    margin: 0 auto;
  }
  .info-important {
    @extend .info;
    background-color: magenta;
  }  
